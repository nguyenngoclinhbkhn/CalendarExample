<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OneDayActivity">

    <com.example.calendarexample.weekviewkotlin.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="10dp"
        app:headerColumnTextColor="#18040D47"
        app:showNowLine="true"
        app:headerRowPadding="0dp"
        app:minHourHeight="50dp"
        app:columnGap="0dp"
        app:eventCornerRadius="5dp"
        app:noOfVisibleDays="1"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#FFFFFF"
        app:headerColumnBackground="#ffffffff"
        app:todayHeaderTextColor="#ffffffff" />
</LinearLayout>